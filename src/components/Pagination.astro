---
interface Props {
  currentPage: number;
  totalPages: number;
  baseUrl: string;
}

const { currentPage, totalPages, baseUrl } = Astro.props;

function getPageUrl(page: number): string {
  if (page === 1) return baseUrl;
  return `${baseUrl}/${page}`;
}
---

{totalPages > 1 && (
  <nav class="mt-8 flex items-center justify-center gap-2" aria-label="Pagination">
    {currentPage > 1 ? (
      <a
        href={getPageUrl(currentPage - 1)}
        class="rounded-lg border border-gray-300 px-3 py-2 text-sm font-medium text-gray-700 transition-colors hover:bg-gray-50 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-800"
      >
        &larr; Prev
      </a>
    ) : (
      <span class="rounded-lg border border-gray-200 px-3 py-2 text-sm font-medium text-gray-400 dark:border-gray-700 dark:text-gray-600">
        &larr; Prev
      </span>
    )}

    {Array.from({ length: totalPages }, (_, i) => i + 1).map((page) => (
      <a
        href={getPageUrl(page)}
        class:list={[
          'rounded-lg px-3 py-2 text-sm font-medium transition-colors',
          page === currentPage
            ? 'bg-primary-600 text-white'
            : 'border border-gray-300 text-gray-700 hover:bg-gray-50 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-800',
        ]}
        aria-current={page === currentPage ? 'page' : undefined}
      >
        {page}
      </a>
    ))}

    {currentPage < totalPages ? (
      <a
        href={getPageUrl(currentPage + 1)}
        class="rounded-lg border border-gray-300 px-3 py-2 text-sm font-medium text-gray-700 transition-colors hover:bg-gray-50 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-800"
      >
        Next &rarr;
      </a>
    ) : (
      <span class="rounded-lg border border-gray-200 px-3 py-2 text-sm font-medium text-gray-400 dark:border-gray-700 dark:text-gray-600">
        Next &rarr;
      </span>
    )}
  </nav>
)}
