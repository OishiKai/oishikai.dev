---
import BaseHead from '@/components/BaseHead.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import '@/styles/global.css';

interface Props {
  title: string;
  description: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
}

const { title, description, image, type, publishedTime } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <BaseHead title={title} description={description} image={image} type={type} publishedTime={publishedTime} />
  </head>
  <body class="min-h-screen bg-white text-gray-900 dark:bg-surface-dark dark:text-text-dark-primary">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
