---
import BaseLayout from './BaseLayout.astro';
import TableOfContents from '@/components/TableOfContents.astro';
import { formatDate } from '@/lib/utils';
import type { MarkdownHeading } from 'astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  tags: string[];
  headings: MarkdownHeading[];
}

const { title, description, pubDate, updatedDate, heroImage, tags, headings } = Astro.props;
---

<BaseLayout title={title} description={description} image={heroImage} type="article" publishedTime={pubDate.toISOString()}>
  <article class="py-8">
    <!-- Header: centered with readable width -->
    <header class="mx-auto mb-8 max-w-3xl px-4">
      <div class="mb-4 flex flex-wrap items-center gap-2 text-sm text-gray-500 dark:text-gray-400">
        <time datetime={pubDate.toISOString()}>{formatDate(pubDate)}</time>
        {updatedDate && (
          <>
            <span>&middot;</span>
            <span>Updated: {formatDate(updatedDate)}</span>
          </>
        )}
      </div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white sm:text-4xl">{title}</h1>
      <p class="mt-3 text-lg text-gray-600 dark:text-gray-400">{description}</p>
      {tags.length > 0 && (
        <div class="mt-4 flex flex-wrap gap-1.5">
          {tags.map((tag) => (
            <a
              href={`/tags/${tag}`}
              class="rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-600 hover:bg-primary-100 hover:text-primary-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-primary-900 dark:hover:text-primary-300"
            >
              {tag}
            </a>
          ))}
        </div>
      )}
    </header>

    {heroImage && (
      <img
        src={heroImage}
        alt={title}
        class="mx-auto mb-8 max-w-3xl rounded-lg object-cover px-4"
      />
    )}

    <!-- Body: TOC on left side, content centered -->
    <div class="relative mx-auto max-w-3xl px-4">
      <!-- TOC: positioned outside the content area on the left -->
      <aside class="hidden xl:block absolute right-full top-0 bottom-0 mr-8 w-56">
        <div class="sticky top-24">
          <TableOfContents headings={headings} />
        </div>
      </aside>

      <!-- TOC: inline for smaller screens -->
      <div class="mb-8 xl:hidden">
        <TableOfContents headings={headings} />
      </div>

      <!-- Main content -->
      <div class="prose max-w-none">
        <slot />
      </div>
    </div>
  </article>
</BaseLayout>
