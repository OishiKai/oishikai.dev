---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const tagCounts = new Map<string, number>();

for (const post of allPosts) {
  for (const tag of post.data.tags) {
    tagCounts.set(tag, (tagCounts.get(tag) || 0) + 1);
  }
}

const tags = [...tagCounts.entries()].sort((a, b) => b[1] - a[1]);
---

<BaseLayout title="Tags" description="ブログ記事のタグ一覧">
  <div class="mx-auto max-w-4xl px-4 py-12">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white sm:text-4xl">Tags</h1>
    <div class="mt-8 flex flex-wrap gap-3">
      {tags.map(([tag, count]) => (
        <a
          href={`/tags/${tag}`}
          class="inline-flex items-center gap-1.5 rounded-full bg-gray-100 px-4 py-2 text-sm font-medium text-gray-700 transition-colors hover:bg-primary-100 hover:text-primary-700 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-primary-900 dark:hover:text-primary-300"
        >
          {tag}
          <span class="rounded-full bg-gray-200 px-1.5 py-0.5 text-xs dark:bg-gray-700">{count}</span>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
